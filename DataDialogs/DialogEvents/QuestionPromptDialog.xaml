<Window
	x:Class="Imperial_Commander_Editor.QuestionPromptDialog"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="clr-namespace:Imperial_Commander_Editor"
	xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	Title="Question Prompt"
	Width="650"
	ContentRendered="Window_ContentRendered"
	MouseDown="Window_MouseDown"
	SizeToContent="Height"
	Style="{StaticResource dws}"
	WindowStartupLocation="CenterScreen"
	mc:Ignorable="d">

	<Window.Resources>
		<DataTemplate x:Key="k1" DataType="{x:Type List}">
			<Grid>
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="*" />
					<ColumnDefinition Width="auto" />
				</Grid.ColumnDefinitions>

				<UniformGrid Columns="3">
					<TextBox
						HorizontalAlignment="Left"
						VerticalAlignment="Center"
						CaretBrush="White"
						Text="{Binding buttonText}" />

					<ComboBox
						x:Name="triggersCB"
						Margin="10,0"
						DisplayMemberPath="name"
						ItemsSource="{Binding mainWindow.localTriggers, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"
						SelectedValue="{Binding triggerGUID}"
						SelectedValuePath="GUID"
						Style="{StaticResource MaterialDesignOutlinedComboBox}" />

					<ComboBox
						x:Name="eventsCB"
						DisplayMemberPath="name"
						ItemsSource="{Binding mainWindow.localEvents, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"
						SelectedValue="{Binding eventGUID}"
						SelectedValuePath="GUID"
						Style="{StaticResource MaterialDesignOutlinedComboBox}" />
				</UniformGrid>

				<Button
					x:Name="remQuestionButton"
					Grid.Column="1"
					Width="35"
					Height="35"
					Margin="10,0,0,0"
					Click="remQuestionButton_Click"
					Style="{StaticResource MaterialDesignFloatingActionButton}">
					<materialDesign:PackIcon
						Width="20"
						Height="20"
						Foreground="Red"
						Kind="RemoveBold" />
				</Button>
			</Grid>
		</DataTemplate>
	</Window.Resources>

	<Border BorderBrush="MediumPurple" BorderThickness="2">
		<GroupBox Header="Question Prompt Event Action" Style="{DynamicResource MaterialDesignGroupBox}">
			<Grid>
				<Grid.RowDefinitions>
					<RowDefinition Height="*" />
					<RowDefinition Height="auto" />
				</Grid.RowDefinitions>

				<StackPanel>
					<TextBox
						x:Name="textbox"
						Grid.Row="0"
						MinHeight="100"
						VerticalAlignment="Stretch"
						materialDesign:HintAssist.Hint="Description"
						AcceptsReturn="True"
						BorderBrush="MediumPurple"
						BorderThickness="2"
						CaretBrush="White"
						Foreground="White"
						Text="{Binding eventAction.theText}"
						TextWrapping="Wrap"
						VerticalScrollBarVisibility="Auto" />

					<Grid>
						<Grid.ColumnDefinitions>
							<ColumnDefinition Width="auto" />
							<ColumnDefinition Width="1*" />
						</Grid.ColumnDefinitions>
						<CheckBox
							Margin="0,10"
							Content="Include Cancel Button"
							IsChecked="{Binding eventAction.includeCancel}"
							Style="{StaticResource MaterialDesignFilterChipSecondaryOutlineCheckBox}" />
						<StackPanel
							Grid.Column="1"
							HorizontalAlignment="Right"
							Orientation="Horizontal">
							<Button
								x:Name="infoBtn"
								Click="infoBtn_Click"
								Content="SYMBOLS..." />
							<Button
								x:Name="formatBtn"
								Margin="10,0,0,0"
								Click="formatBtn_Click"
								Content="FORMATTING..." />
						</StackPanel>
					</Grid>

					<materialDesign:Card Padding="10" Background="#FF7952C0">
						<Grid>
							<Grid.ColumnDefinitions>
								<ColumnDefinition Width="auto" />
								<ColumnDefinition Width="*" />
								<ColumnDefinition Width="auto" />
								<ColumnDefinition Width="auto" />
							</Grid.ColumnDefinitions>
							<Button
								x:Name="addButtonBtn"
								Click="addButtonBtn_Click"
								Content="ADD NEW BUTTON" />
							<Separator
								Grid.Column="1"
								Width="32"
								RenderTransformOrigin="0.5,0.5">
								<Separator.RenderTransform>
									<TransformGroup>
										<ScaleTransform />
										<SkewTransform />
										<RotateTransform Angle="90" />
										<TranslateTransform />
									</TransformGroup>
								</Separator.RenderTransform>
							</Separator>
							<Button
								x:Name="addTriggerBtn"
								Grid.Column="2"
								Margin="10,0"
								Click="addNewTriggerButton_Click"
								Content="+ CREATE NEW TRIGGER..." />
							<Button
								x:Name="addEventBtn"
								Grid.Column="3"
								Click="addEventBtn_Click"
								Content="+ CREATE NEW EVENT..." />
						</Grid>
					</materialDesign:Card>

					<materialDesign:Card
						Margin="0,10,0,0"
						Padding="10"
						Background="Purple">
						<StackPanel>
							<UniformGrid Margin="0,0,55,0" Columns="3">
								<TextBlock
									HorizontalAlignment="Left"
									VerticalAlignment="Center"
									Text="Button Text:" />
								<TextBlock
									HorizontalAlignment="Left"
									VerticalAlignment="Center"
									Text="When Clicked, Fire Trigger:" />
								<TextBlock
									HorizontalAlignment="Center"
									VerticalAlignment="Center"
									Text="When Clicked, Fire Event:" />
							</UniformGrid>

							<Separator Margin="0,5,0,5" />

							<ListBox
								x:Name="triggersLB"
								HorizontalContentAlignment="Stretch"
								d:ItemsSource="{d:SampleData ItemCount=1}"
								ItemTemplate="{StaticResource k1}"
								ItemsSource="{Binding eventAction.buttonList}">
								<ListBox.ItemContainerStyle>
									<Style BasedOn="{StaticResource MaterialDesignListBoxItem}" TargetType="ListBoxItem">
										<Setter Property="materialDesign:ListBoxItemAssist.ShowSelection" Value="False" />
									</Style>
								</ListBox.ItemContainerStyle>
							</ListBox>
						</StackPanel>
					</materialDesign:Card>
				</StackPanel>

				<StackPanel Grid.Row="1">
					<Separator Margin="0,10,0,10" />
					<Button
						x:Name="okButton"
						HorizontalAlignment="Right"
						Click="okButton_Click"
						Content="ACCEPT" />
				</StackPanel>
			</Grid>
		</GroupBox>
	</Border>
</Window>
