<UserControl x:Class="Imperial_Commander_Editor.EncounterPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:s="clr-namespace:System;assembly=mscorlib" 
             xmlns:local="clr-namespace:Imperial_Commander_Editor"
             mc:Ignorable="d" 
						 xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             d:DesignHeight="450" d:DesignWidth="800">

  <UserControl.Resources>
    <DataTemplate x:Key="k1">
      <Grid>
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="1*" />
          <ColumnDefinition Width="auto" />
          <ColumnDefinition Width="auto" />
        </Grid.ColumnDefinitions>

        <TextBlock VerticalAlignment="Center">
          <TextBlock.Text>
            <MultiBinding StringFormat="{}{0}: {1}">
              <Binding Path="card.name"/>
              <Binding Path="card.id"/>
            </MultiBinding>
          </TextBlock.Text>
        </TextBlock>

        <Button Grid.Column="1" x:Name="editGroup" Content="{materialDesign:PackIcon Kind=Edit}" Click="editGroup_Click" Style="{StaticResource MaterialDesignFloatingActionButton}" Width="35" Height="35"/>

        <Button Grid.Column="2" x:Name="remInitialGroupButton" Content="{materialDesign:PackIcon Kind=RemoveBold}" Click="remInitialGroupButton_Click" Style="{StaticResource MaterialDesignFloatingActionButton}" Foreground="Red" Width="35" Height="35" Margin="10,0,0,0"/>
      </Grid>
    </DataTemplate>

    <DataTemplate x:Key="k2">
      <Grid>
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="*" />
          <ColumnDefinition Width="auto" />
        </Grid.ColumnDefinitions>

        <TextBlock VerticalAlignment="Center">
          <TextBlock.Text>
            <MultiBinding StringFormat="{}{0}: {1}">
              <Binding Path="name"/>
              <Binding Path="id"/>
            </MultiBinding>
          </TextBlock.Text>
        </TextBlock>

        <Button Grid.Column="2" x:Name="remReservedGroupButton" Content="{materialDesign:PackIcon Kind=RemoveBold}" Click="remReservedGroupButton_Click" Style="{StaticResource MaterialDesignFloatingActionButton}" Foreground="Red" Width="35" Height="35"/>
      </Grid>
    </DataTemplate>
  </UserControl.Resources>

  <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="10">
    <StackPanel>
      <UniformGrid Columns="2">
        <!--LEFT-->
        <GroupBox Header="INITIAL GROUPS" Margin="0,0,5,0">
          <StackPanel>
            <materialDesign:Card Background="MediumPurple" VerticalAlignment="Top" Padding="10">
              <StackPanel>
                <ComboBox x:Name="gCB_initial" Style="{StaticResource MaterialDesignOutlinedComboBox}" SelectedValue="{Binding selectedGroup, RelativeSource={RelativeSource AncestorType=local:EncounterPanel}}" SelectedValuePath="id">
                  <ComboBox.ItemTemplate>
                    <DataTemplate>
                      <TextBlock>
                        <TextBlock.Text>
                          <MultiBinding StringFormat="{}{0}: {1}">
                            <Binding Path="name"/>
                            <Binding Path="id"/>
                          </MultiBinding>
                        </TextBlock.Text>
                      </TextBlock>
                    </DataTemplate>
                  </ComboBox.ItemTemplate>
                </ComboBox>

                <TextBlock Text="DEPLOYMENT POINT" Margin="0,10,0,5" HorizontalAlignment="Center"/>
                <ComboBox x:Name="dpCB" Style="{StaticResource MaterialDesignOutlinedComboBox}" SelectedValue="{Binding deploymentPoint}" DisplayMemberPath="name"/>

                <Button x:Name="addInitialGroupButton" Grid.Column="1" Content="ADD GROUP" Margin="0,10,0,0" Click="addInitialGroupButton_Click" IsEnabled="{Binding buttonEnabled}"/>
              </StackPanel>
            </materialDesign:Card>

            <!--LIST BOX-->
            <materialDesign:Card Background="Purple" Padding="10" Margin="0,10,0,0">
              <ListBox ItemsSource="{Binding initialGroups}" HorizontalContentAlignment="Stretch" ItemTemplate="{StaticResource k1}">
                <ListBox.ItemContainerStyle>
                  <Style TargetType="ListBoxItem" BasedOn="{StaticResource MaterialDesignListBoxItem}">
                    <Setter Property="materialDesign:ListBoxItemAssist.ShowSelection" Value="False" />
                  </Style>
                </ListBox.ItemContainerStyle>
              </ListBox>
            </materialDesign:Card>
          </StackPanel>
        </GroupBox>

        <!--RIGHT-->
        <GroupBox Header="RESERVED GROUPS" Margin="5,0,0,0">
          <StackPanel>
            <materialDesign:Card Background="MediumPurple" VerticalAlignment="Top" Padding="10">
              <Grid>
                <Grid.ColumnDefinitions>
                  <ColumnDefinition Width="*" />
                  <ColumnDefinition Width="auto" />
                </Grid.ColumnDefinitions>

                <ComboBox x:Name="dpCB_reserved" Style="{StaticResource MaterialDesignOutlinedComboBox}" SelectedValue="{Binding selectedResGroup, RelativeSource={RelativeSource AncestorType=local:EncounterPanel}}" SelectedValuePath="id">
                  <ComboBox.ItemTemplate>
                    <DataTemplate>
                      <TextBlock>
                        <TextBlock.Text>
                          <MultiBinding StringFormat="{}{0}: {1}">
                            <Binding Path="name"/>
                            <Binding Path="id"/>
                          </MultiBinding>
                        </TextBlock.Text>
                      </TextBlock>
                    </DataTemplate>
                  </ComboBox.ItemTemplate>
                </ComboBox>

                <Button x:Name="addReservedGroupButton" Grid.Column="1" Content="{materialDesign:PackIcon Kind=AddBold}" Margin="10,0,0,0" Style="{StaticResource MaterialDesignFloatingActionButton}" Width="35" Height="35" Click="addReservedGroupButton_Click"/>
              </Grid>
            </materialDesign:Card>

            <!--LIST BOX-->
            <materialDesign:Card Background="Purple" Padding="10" Margin="0,10,0,0">
              <ListBox ItemsSource="{Binding reservedGroups}" HorizontalContentAlignment="Stretch" ItemTemplate="{StaticResource k2}">
                <ListBox.ItemContainerStyle>
                  <Style TargetType="ListBoxItem" BasedOn="{StaticResource MaterialDesignListBoxItem}">
                    <Setter Property="materialDesign:ListBoxItemAssist.ShowSelection" Value="False" />
                  </Style>
                </ListBox.ItemContainerStyle>
              </ListBox>
            </materialDesign:Card>
          </StackPanel>
        </GroupBox>
      </UniformGrid>
    </StackPanel>
  </ScrollViewer>
</UserControl>
